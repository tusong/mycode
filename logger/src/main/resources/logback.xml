	<logger name="info" level="INFO" additivity="false">
		<appender-ref ref="info" />
	</logger>
	<logger name="exception" level="INFO" additivity="false">
		<appender-ref ref="exception" />
	</logger>
	<logger name="keyInfo" level="INFO" additivity="false">
