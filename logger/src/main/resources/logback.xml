			<maxHistory>10</maxHistory>
            <maxFileSize>300MB</maxFileSize>
            <totalSizeCap>10240MB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>[fm-log] %date [%thread] %-5level %logger{80} - %msg%n
			</pattern>
		</encoder>
	</appender>

