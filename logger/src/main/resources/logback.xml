<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />
	<jmxConfigurator />
	<!-- 工作台日志 -->
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[fm-log] %date [%thread] %-5level %logger{80} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<!-- debug日志 -->
	<property name="debug_path" value="./logs/debug/debug_log" />
	<appender name="debug"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<FileNamePattern>${debug_path}-%d{yyyy-MM-dd}.%i.log</FileNamePattern>
			<maxHistory>10</maxHistory>
            <maxFileSize>300MB</maxFileSize>
            <totalSizeCap>10240MB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>[fm-log] %date [%thread] %-5level %logger{80} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<!-- info日志 -->
	<property name="info_path" value="./logs/info/info_log" />
	<appender name="info"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
